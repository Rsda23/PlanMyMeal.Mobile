<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanMyMeal_Domain.ForgoutPage">
    <Grid RowDefinitions="1*,8*,1*">
        <Frame CornerRadius="0" 
   Grid.Row="1"
   VerticalOptions="CenterAndExpand"
   Margin="40, 0">
            <VerticalStackLayout Spacing="10">
                <StackLayout IsVisible="True" x:Name="Mail">
                    <Label Text="Mot de passe oublié ?" Padding="0, 0, 0, 5" HorizontalTextAlignment="Center" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Saisissez votre adresse e-mail de récupération" Padding="0, 0, 0, 10" HorizontalTextAlignment="Center" FontSize="12"/>

                    <Frame  Padding="10" Margin="0, 10, 0, 10">
                        <Grid ColumnDefinitions="5,*">
                            <Entry VerticalOptions="Center" Placeholder="Email" FontSize="11" Grid.Column="1"/>
                        </Grid>
                    </Frame>

                    <Button Clicked="Btn_Mail" Text="Suivant" FontAttributes="Bold" HeightRequest="45" FontSize="18" />
                </StackLayout>

                <StackLayout IsVisible="False" x:Name="Code">
                    <Label Text="Vérification" Padding="0, 0, 0, 5" HorizontalTextAlignment="Center" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Veuillez entrer le code de récupération reçu par e-mail." Padding="0, 0, 0, 10" HorizontalTextAlignment="Center" FontSize="12"/>
                    <Frame Padding="10" Margin="0, 0, 0, 10">
                        <Grid ColumnDefinitions="5,*">
                            <Entry VerticalOptions="Center" Placeholder="Code" IsPassword="True" FontSize="11" Grid.Column="1"/>
                        </Grid>
                    </Frame>

                    <Button Clicked="Btn_Password" Text="Valider" FontAttributes="Bold" HeightRequest="45" FontSize="18" />
                </StackLayout>

                <StackLayout IsVisible="False" x:Name="Password">
                    <Label Text="Réinitialisation" Padding="0, 0, 0, 5" HorizontalTextAlignment="Center" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Choisissez un nouveau mot de passe sécurisé en combinant lettres, chiffres et caractères spéciaux." Padding="0, 0, 0, 10" HorizontalTextAlignment="Center" FontSize="12"/>
                    <Frame Padding="10">
                        <Grid ColumnDefinitions="5,*">
                            <Entry VerticalOptions="Center" Placeholder="Mot de passe" IsPassword="True" FontSize="11" Grid.Column="1"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" Margin="0, 10, 0, 10">
                        <Grid ColumnDefinitions="5,*">
                            <Entry VerticalOptions="Center" Placeholder="Confirmation du mot de passe" IsPassword="True" FontSize="11" Grid.Column="1"/>
                        </Grid>
                    </Frame>

                    <Button Clicked="Btn_Login" Text="Confirmer" FontAttributes="Bold" HeightRequest="45" FontSize="18" />
                </StackLayout>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>