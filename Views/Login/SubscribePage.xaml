<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanMyMeal_Domain.SubscribePage">
    <Grid RowDefinitions="1*,8*,1*">
        <Frame CornerRadius="0" 
               Grid.Row="1"
               Margin="40, 0">
            <VerticalStackLayout Spacing="10">
                <StackLayout IsVisible="{Binding IsStepPseudo}">
                    <Label Text="Inscription" 
                           Padding="0, 0, 0, 5" 
                           HorizontalTextAlignment="Center" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Label Text="Choisissez un pseudo compris entre 3 et 20 caractères." 
                           Padding="0, 0, 0, 10" 
                           HorizontalTextAlignment="Center" 
                           FontSize="12"/>
                    
                    <Frame Padding="10" 
                           Margin="0, 10, 0, 15">
                        <Grid ColumnDefinitions="5,*">
                            <Entry Grid.Column="1"
                                   VerticalOptions="Center" 
                                   Text="{Binding Pseudo}"
                                   Placeholder="Pseudo" 
                                   FontSize="11"/>
                        </Grid>
                    </Frame>

                    <Label Text="{Binding ErrorPseudo}" 
                           TextColor="Red" 
                           FontSize="14" 
                           IsVisible="False"
                           Margin="0, 0, 0, 15" 
                           HorizontalTextAlignment="Center" />
                    
                    <Button Command="{Binding StepPseudoCommand}"
                            Text="Suivant"  
                            FontAttributes="Bold" 
                            HeightRequest="45" 
                            FontSize="18" />
                </StackLayout>

                <StackLayout IsVisible="{Binding IsStepEmail}">
                    <Label Text="Inscription" 
                           Padding="0, 0, 0, 5"
                           HorizontalTextAlignment="Center" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Label Text="Saisissez une adresse e-mail valide pour vous connecter" 
                           Padding="0, 0, 0, 10" 
                           HorizontalTextAlignment="Center" 
                           FontSize="12"/>
                    
                    <Frame  Padding="10" 
                            Margin="0, 10, 0, 15">
                        <Grid ColumnDefinitions="5,*">
                            <Entry Grid.Column="1"
                                   VerticalOptions="Center" 
                                   Text="{Binding Email}"
                                   Placeholder="Email"
                                   FontSize="11"/>
                        </Grid>
                    </Frame>
                    
                    <Label Text="ErrorEmail" 
                           TextColor="Red" 
                           FontSize="14" 
                           IsVisible="{Binding IsErrorEmail}" 
                           Margin="0, 0, 0, 15" 
                           HorizontalTextAlignment="Center" />
                    
                    <Button Command="{Binding StepEmailCommand}"
                            Text="Suivant"  
                            FontAttributes="Bold" 
                            HeightRequest="45" 
                            FontSize="18" />
                </StackLayout>

                <StackLayout IsVisible="{Binding IsStepPassword}" >
                    <Label Text="Inscription" 
                           Padding="0, 0, 0, 5" 
                           HorizontalTextAlignment="Center" 
                           FontSize="18"
                           FontAttributes="Bold"/>
                    
                    <Label Text="Choisissez un mot de passe sécurisé contenant au moins 8 caractères." 
                           Padding="0, 0, 0, 10" 
                           HorizontalTextAlignment="Center" 
                           FontSize="12"/>
                    
                    <Frame Padding="10">
                        <Grid ColumnDefinitions="5,*">
                            <Entry VerticalOptions="Center" 
                                   Text="{Binding Password}"
                                   Placeholder="Mot de passe" 
                                   IsPassword="True" 
                                   FontSize="11" 
                                   Grid.Column="1"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10"
                           Margin="0, 10, 0, 10">
                        <Grid ColumnDefinitions="5,*">
                            <Entry Grid.Column="1"
                                   VerticalOptions="Center" 
                                   Text="{Binding SecondPassword}"
                                   Placeholder="Confirmation du mot de passe" 
                                   IsPassword="True"
                                   FontSize="11"/>
                        </Grid>
                    </Frame>
                    
                    <Label Text="{Binding ErrorPassword}"
                           TextColor="Red" 
                           FontSize="14" 
                           IsVisible="{Binding IsErrorPassword}" 
                           Margin="0, 0, 0, 15" 
                           HorizontalTextAlignment="Center" />
                    
                    <Button Command="{Binding StepPasswordCommand}"
                            Text="S'inscrire" 
                            FontAttributes="Bold" 
                            HeightRequest="45" 
                            FontSize="18" />
                </StackLayout>

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Vous avez un compte ?" 
                           FontSize="12" 
                           VerticalTextAlignment="Center" />
                    <Label Text="Connectez-vous" 
                           FontAttributes="Bold" 
                           FontSize="13" 
                           Margin="10, 0, 0, 0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToCommand}"
                                                  CommandParameter="login"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>