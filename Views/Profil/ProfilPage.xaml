<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PlanMyMeal_Domain.ProfilPage">
    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*, Auto" 
                  Margin="20, 0, 20, 0" 
                  VerticalOptions="Center">
                <Label Grid.Column="0"
                       Text="Profil" 
                       FontAttributes="Bold" 
                       FontSize="18" 
                       HorizontalTextAlignment="Start"
                       VerticalTextAlignment="Center" />
                
                <Grid Grid.Column="1"
                      Margin="0, 10, 0, 0">
                    <Label Text="Theme" 
                           FontAttributes="Bold"
                           FontSize="14" 
                           HorizontalTextAlignment="Center" />
                    
                    <Switch VerticalOptions="Center" 
                            HorizontalOptions="Center"
                            Toggled="OnDarkModeToggled" 
                            Margin="0, 5, 0, 0" />
                </Grid>
            </Grid>
            
            <Frame WidthRequest="100"
                   HeightRequest="100"
                   CornerRadius="50"
                   Padding="0"
                   Margin="0, 20, 0, 0">
                <Image x:Name="ProfilImage" 
                       Source="{Binding ImageUrl}"
                       HeightRequest="100" 
                       Aspect="AspectFill">
                    <Image.Behaviors>
                        <toolkit:TouchBehavior LongPressDuration="750"
                                               DefaultAnimationEasing="{x:Static Easing.CubicInOut}"
                                               PressedOpacity="0.6"
                                               PressedScale="0.8"
                                               LongPressCommandParameter="{Binding .}"
                                               LongPressCommand="{Binding Source={x:Reference Page}, Path=BindingContext.EditImageCommand}"/>
                    </Image.Behaviors>
                </Image>
            </Frame>

            <Label Grid.Column="0" 
                   Text="{Binding Pseudo}"
                   FontAttributes="Bold" 
                   FontSize="20" 
                   HorizontalTextAlignment="Center" 
                   Margin="0, 10, 0, 10"/>

            <Label Grid.Column="0"
                   Text="Coordonnées"
                   FontAttributes="Bold" 
                   FontSize="15"
                   HorizontalTextAlignment="Start" 
                   Margin="20, 40, 0, 10"/>
            
            <Frame Margin="20, 0, 20, 20"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2E2E3F}">
                <VerticalStackLayout>
                    <Label FontAttributes="Bold" 
                           Text="E-mail"
                           FontSize="18" 
                           HorizontalTextAlignment="Start" 
                           Margin="0"/>

                    <Label Text="{Binding Email}"
                           FontSize="18" 
                           HorizontalTextAlignment="Start" 
                           Margin="0"/> 
                </VerticalStackLayout>
            </Frame>
            
            <Frame Margin="20, 0, 20, 20" 
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2E2E3F}">
                <VerticalStackLayout>
                    <Label FontAttributes="Bold" 
                           Text="Téléphone"
                           FontSize="18" 
                           HorizontalTextAlignment="Start"
                           Margin="0"/>

                    <Label Text="Vide"
                           FontSize="18"
                           HorizontalTextAlignment="Start"
                           Margin="0"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame Margin="20, 0, 20, 20"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2E2E3F}">
                <VerticalStackLayout>
                    <Label FontAttributes="Bold" 
                           Text="Date de naissane"
                           FontSize="18"
                           HorizontalTextAlignment="Start" 
                           Margin="0"/>

                    <Label Text="Vide"
                           FontSize="18"
                           HorizontalTextAlignment="Start" 
                           Margin="0"/>
                </VerticalStackLayout>
            </Frame>
            
            <Button Clicked="Btn_Login" 
                    Command="{Binding NavigateToCommand}"
                    CommandParameter="login"
                    Text="Déconnexion"  
                    FontAttributes="Bold" 
                    HeightRequest="45" 
                    FontSize="18"
                    Margin="20, 0" />
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>